<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>LoginController</servlet-name>
        <servlet-class>controller.LoginController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>HomeController</servlet-name>
        <servlet-class>controller.HomeController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AdminHomeController</servlet-name>
        <servlet-class>controller.admin.AdminHomeController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ManagerHomeController</servlet-name>
        <servlet-class>controller.manager.ManagerHomeController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>MaketingStaffHomeController</servlet-name>
        <servlet-class>controller.marketingstaff.MaketingStaffHomeController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SellerHomeController</servlet-name>
        <servlet-class>controller.seller.SellerHomeController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>StorageStaffHomeController</servlet-name>
        <servlet-class>controller.storagestaff.StorageStaffHomeController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginController</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>HomeController</servlet-name>
        <url-pattern>/home</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AdminHomeController</servlet-name>
        <url-pattern>/admin/home</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ManagerHomeController</servlet-name>
        <url-pattern>/manager/home</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>MaketingStaffHomeController</servlet-name>
        <url-pattern>/marketing-staff/home</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SellerHomeController</servlet-name>
        <url-pattern>/seller/home</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>StorageStaffHomeController</servlet-name>
        <url-pattern>/storage-staff/home</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
